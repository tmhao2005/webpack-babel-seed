{
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "strict": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "target": "ES2018",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES2020"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "client": [
        "src/client/"
      ],
      "@client/*": [
        "src/client/*"
      ]
    },
    "listFiles": false,
    "outDir": "./lib"
    // "outDir": "./lib" // won't work with rollup
  },
  "exclude": [
    "node_modules",
    "src/**/*.js",
    "src/demo-types/*.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types"
  ]
}
